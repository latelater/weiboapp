<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1"
        android:id="@+id/linearLayout5">
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/loginpicture"
            android:layout_marginLeft="8dp"
            android:background="@drawable/avator_default"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:width="150dp"
            android:text="username"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:id="@+id/loginname"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="50dp"
            android:text="刷新"
            android:textColor="#fff"
            android:id="@+id/refresh"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout5"
        android:layout_above="@+id/linearLayout6">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/li">
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout6">
        <ImageButton
            android:layout_width="38dp"
            android:layout_height="10dp"
            android:id="@+id/last"
            android:background="@drawable/upwb"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/send_page" />

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="10dp"
            android:id="@+id/next"
            android:layout_marginLeft="100dp"
            android:background="@drawable/downwb"
            android:layout_below="@+id/last"
            android:layout_toRightOf="@+id/send_page" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#eee"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:baselineAligned="true"
        android:id="@+id/linearLayout4">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/homerelative"
            android:layout_weight="1.0"
            android:layout_gravity="bottom">
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:id="@+id/home_page"
                android:background="@drawable/home_choose"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:id="@+id/addrelative"
            android:layout_gravity="bottom">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/send_page"
                android:background="@drawable/add_choose"
                android:layout_gravity="bottom"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:id="@+id/userrelative"
            android:layout_gravity="bottom">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/profile_page"
                android:background="@drawable/user"
                android:layout_gravity="bottom"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>